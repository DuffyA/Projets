<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pattaya&family=Poiret+One&family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('/styles/style.css') }}">
    {% block css_page %}{% endblock %}
    <title>Eco Ride Accueil</title>
    <link rel="icon" href="{{ asset('/media/feuille.ico') }}" type="image/x-icon">
</head>
<body class="body">
<div class="overlay hidden"></div>
<div id="container">
    <nav class="navigation">
        <a href="{{ path('app_home') }}">
            <img class="logo" src="{{ asset('/media/Logo EcoRide.png') }}" alt="Logo EcoRide">
        </a>
        <button class="mobile-open-menu">
                <span>
                    <img src="{{ asset('/media/Icones_svg/Open phone menu.svg') }}" alt="Open phone menu">
                </span>
        </button>
        <ul class="nav-links">
            <a href="{{ path('app_home') }}">Accueil</a>
            <a href="Trajets.php">Trajets</a>
            <a href="Contact.php">Contact</a>
            {% if app.user %}
                <a class="nav-links-account" href="{{ path('app_account') }}">
                    <img class="user-icone-nav" src="{{ asset('/media/Icones_svg/User.svg') }}" alt="User open account">
                    <span class="user-pseudo-nav">{{ app.user.userPseudo }}</span>
                </a>
            {% else %}
                <a href="{{ path('app_login') }}">
                    <button class="button connexion-button">Connexion</button>
                </a>
            {% endif %}


        </ul>
    </nav>

    <div class="mobile-menu hidden">
        <button>
                <span class="mobile-close-menu">
                    <img src="{{ asset('/media/Icones_svg/Close phone menu.svg') }}" alt="Close phone menu">
                </span>
        </button>
        <ul class="mobile-nav-links">
            <a href={{ path('app_home') }}>Accueil</a>
            <a href="Trajets.php">Trajets</a>
            <a href="contact.php">Contact</a>
            {% if app.user %}
                <a href="{{ path('app_account') }}">
                    <img class="user-icone-mobile-nav" src="{{ asset('/media/Icones_svg/User2.svg') }}" alt="User open account">
                    <span class="user-pseudo-mobile-nav">{{ app.user.userPseudo }}</span>
                </a>
            {% else %}
                <a href="{{ path('app_account') }}">Connexion</a>
            {% endif %}
        </ul>
    </div>

    <header style="background-image: {% block header_background %}{% endblock %}">
        <h1>{% block header_text %}Eco Ride<br/>Voyagez responsable, vivez durable{% endblock %}</h1>
    </header>
    <div>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

        {% block body %}

        {% endblock %}

    <footer class="footer">
        <div class="texte-footer">
            <a href={{ path('app_home') }}>Mentions Legales</a>
            <p>ecoride@exemple.com.fr</p>
            <p>Eco Ride, 2025</p>
        </div>
        <div class="vroom"></div>
    </footer>

</div>
{% block script_page %}
    <script src="{{ asset('/scripts/modal.js') }}" defer></script>
    <script src="{{ asset('/scripts/alert.js') }}" defer></script>
{% endblock %}

</body>
</html>
