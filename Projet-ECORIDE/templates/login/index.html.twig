{% extends 'base.html.twig' %}

{% block css_page %}<link rel="stylesheet" href="{{ asset('/styles/connexion.css') }}">{% endblock %}

{% block header_background %}url('../media/Images_accueil/image Header A.jpg'){% endblock %}
{% block header_text %}Eco Ride<br/>Voyagez responsable, vivez durable{% endblock %}


{% block body %}
    <main>
        <div class="connexion-menu">
            <h2>Connexion</h2>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form class="connexion-form" action="{{ path('app_login') }}" method="post">

                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required>

                <label for="password">Mot de passe:</label>
                <input type="password" id="password" name="_password" required>


                <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

                <button class="button" type="submit">Connexion</button>

                <a href="{{ path('app_register') }}">Cr√©er un compte</a>
        </div>
    </main>
{% endblock %}

{% block script_page %}<script src="{{ asset('/scripts/register.js') }}" defer></script>{% endblock %}